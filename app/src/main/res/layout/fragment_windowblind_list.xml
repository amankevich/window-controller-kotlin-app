<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
             android:layout_width="match_parent">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="by.squareroot.windowcontroller.ui.WindowBlindFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.WindowBlindListFragment"
            tools:listitem="@layout/window_blind_item"/>

    <TextView android:id="@+id/empty_list"
            android:layout_width="match_parent" android:layout_height="match_parent"
              android:gravity="center"
              android:text="@string/fragment_title_window_blinds_list_empty"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_add"/>
</FrameLayout>